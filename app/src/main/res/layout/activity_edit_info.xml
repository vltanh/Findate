<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EditInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/edit_info_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:id="@+id/iv_swipe_image"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_layout"/>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_plus_image"
                android:layout_marginTop="220dp"
                android:layout_marginLeft="250dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_plus"
                app:tint="@color/white"
                app:backgroundTint="@color/colorAccent"
                android:visibility="visible"/>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_delete_image"
                android:layout_marginTop="220dp"
                android:layout_marginLeft="250dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_no"
                app:tint="@color/white"
                app:backgroundTint="@color/colorPrimary"
                android:visibility="invisible"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_edit_info_name"
                android:text="@string/edit_info_name"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ed_edit_info_name"
                android:layout_below="@+id/tv_edit_info_name"
                android:layout_margin="10dp"
                android:padding="8dp"
                android:background="@drawable/border_layout"
                android:textSize="18dp"
                android:maxLength="30"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_edit_info_birth"
                android:text="@string/edit_info_birth"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_birth_set"
                android:layout_below="@+id/tv_edit_info_birth"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:background="@drawable/border_layout"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_edit_info_phone"
                android:text="@string/edit_info_phone"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ed_edit_info_phone"
                android:layout_below="@+id/tv_edit_info_phone"
                android:layout_margin="10dp"
                android:padding="8dp"
                android:background="@drawable/border_layout"
                android:textSize="18dp"
                android:inputType="phone"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_edit_info_about"
                android:text="@string/edit_info_about"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ed_edit_info_about"
                android:layout_below="@+id/tv_edit_info_about"
                android:layout_margin="10dp"
                android:padding="8dp"
                android:background="@drawable/border_layout"
                android:textSize="18dp"
                android:maxLines="10"
                android:maxLength="250"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_edit_info_job_title"
                android:text="@string/edit_info_job_title"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ed_edit_info_job_title"
                android:layout_below="@+id/tv_edit_info_job_title"
                android:layout_margin="10dp"
                android:padding="8dp"
                android:background="@drawable/border_layout"
                android:textSize="18dp"
                android:maxLength="30"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_edit_info_school"
                android:text="@string/edit_info_school"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ed_edit_info_school"
                android:layout_below="@+id/tv_edit_info_school"
                android:layout_margin="10dp"
                android:padding="8dp"
                android:background="@drawable/border_layout"
                android:textSize="18dp"
                android:maxLength="30"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_edit_info_update"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="@string/btn_edit_info_update"
                android:background="@color/colorAccent"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_marginStart="50dp"
                android:layout_marginRight="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_edit_info_cancel"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="@string/btn_edit_info_cancel"
                android:background="@color/colorAccent"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="20dp"
                android:layout_marginEnd="50dp"/>

        </RelativeLayout>


    </LinearLayout>


</ScrollView>